{
  "compilerOptions": {
    "outDir": "./dist/",

    "noImplicitAny": true,
    "module": "ESNext",

    "jsx": "react-jsx",

    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./config/jest/setupTests.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
